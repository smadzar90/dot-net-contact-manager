@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Details";
}

<h1>Contact Details</h1>

<div class="container mt-3">
    <div class="row border-top border-left border-right py-3">
        <div class="col-sm-2 font-weight-bold">
            Name
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
            @Html.DisplayFor(model => model.LastName)
        </div>
    </div>
    <div class="row border-top border-left border-right py-3">
        <div class="col-sm-2 font-weight-bold">
            @Html.DisplayNameFor(model => model.Phone)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </div>
    </div>
    <div class="row border-top border-left border-right py-3">
        <div class="col-sm-2 font-weight-bold">
            @Html.DisplayNameFor(model => model.Email)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>
    <div class="row border-top border-left border-right py-3">
        <div class="col-sm-2 font-weight-bold">
            @Html.DisplayNameFor(model => model.Category)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </div>
    </div>
    <div class="row border-top border-left border-right py-3">
        <div class="col-sm-2 font-weight-bold">
            @Html.DisplayNameFor(model => model.Organisation)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Organisation)
        </div>
    </div>
    <div class="row border-top border-left border-right py-3">
        <div class="col-sm-2 font-weight-bold">
            @Html.DisplayNameFor(model => model.DateAdded)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.DateAdded)
        </div>
    </div>
    <div class="row border py-3 pl-3">
        <a class="btn btn-dark mr-1" asp-action="Edit" asp-route-id="@Model.ContactID">Edit</a>
        <a class="btn btn-dark mr-1" asp-action="Delete" asp-route-id="@Model.ContactID">Delete</a>
        <a class="btn btn-dark" asp-action="Index">Home</a>
    </div>
</div>
